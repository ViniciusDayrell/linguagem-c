#include <stdio.h>
#include <stdlib.h>

int main(){
    int x;
    printf ("Digite um numero de 1 a 7: ");
    scanf ("%d", &x);
      switch ( x ) {
          case 1: printf ("O dia da semana eh Domingo"); break;
          case 2: printf ("O dia da semana eh Segunda"); break;
          case 3: printf ("O dia da semana eh Terca"); break;
          case 4: printf ("O dia da semana eh Quarta"); break;
          case 5: printf ("O dia da semana eh Quinta"); break;
          case 6: printf ("O dia da semana eh Sexta"); break;
          case 7: printf ("O dia da semana eh Sabado"); break;
          default: printf ("O numero deve estar entre 1 a 7. Sinto muito!"); break;
      }

    return 0;
}
